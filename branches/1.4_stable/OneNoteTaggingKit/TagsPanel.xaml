<UserControl x:Class="WetHatLab.OneNote.TaggingKit.TagsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="134" d:DesignWidth="300">
    <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True">
        <WrapPanel x:Name="tagsPanel" >
            <Button x:Name="RemoveTagButton" Background="White" Click="RemoveTagButton_Click" BorderBrush="LightBlue" ToolTip="Remove Tag" Margin="3,3,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Background="White" Text="tag" Margin="0,0,5,0"/>
                    <TextBlock FontFamily="Segoe UI Symbol" Background="White" Foreground="Red" Text="❌" Width="10" Height="10" FontSize="8" TextAlignment="Center"/>
                </StackPanel>
            </Button>
        </WrapPanel>
    </ScrollViewer>
</UserControl>
