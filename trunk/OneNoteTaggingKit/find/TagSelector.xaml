<UserControl x:Class="WetHatLab.OneNote.TaggingKit.find.TagSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WetHatLab.OneNote.TaggingKit.find"
             xmlns:prop="clr-namespace:WetHatLab.OneNote.TaggingKit.Properties"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type={x:Type local:TagSelectorDesignerModel}}"
             mc:Ignorable="d">
    <ToggleButton Background="White"
                  BorderBrush="LightBlue"
                  IsChecked="{Binding IsChecked, Mode=TwoWay}"
                  ToolTip="{Binding Mode=OneTime, Source={x:Static prop:Resources.TagSelector_Tooltip}}">
        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Bottom" >
                <Run Text="{Binding TagName, Mode=OneWay}"/><Run Text=" ("/><Run Text="{Binding PageCount, Mode=OneWay}" /><Run Text=")" />
            </TextBlock>
            <CheckBox VerticalAlignment="Bottom" IsChecked="{Binding IsChecked, Mode=OneWay}" BorderThickness="0" Background="Transparent"/>
        </StackPanel>
    </ToggleButton>
</UserControl>
